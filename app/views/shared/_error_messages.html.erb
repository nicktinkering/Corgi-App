<% if @user.errors.any? %>
	<div id="error-explanation">
		<div class="alert alert-error">
			The form contains <%= pluralize(@user.errors.count, "error") %>. Please try again, filling out the fields appropriately.
		</div>
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
		    <li><%= msg %></li>
		    <% end %>
		</ul>
	</div>
<% end %>